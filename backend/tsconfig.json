{
  "extends": "@tsconfig/node16-strictest-esm/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/",
    "removeComments": false,
    "allowJs": true,
    "baseUrl": "./src/",
    "module": "CommonJS",
    "noUnusedParameters": false,
    "paths": {
      "@utils/*": ["utils/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@controllers/*": ["controllers/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@schemas/*": ["schemas/*"]
    }
  },
  "include": ["./src/**/*"]
}