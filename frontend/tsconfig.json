{
  "extends": "@tsconfig/create-react-app/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/",
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "target": "es2022",
    "sourceMap": true,
    "baseUrl": "./",
    "noEmit": false,
    "paths": {
      "@styles/*": ["src/styles/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./custom.d.ts"],
  "exclude": ["node_modules"]
}